<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sist.spring.dao.joinmemberdao">
    
    <!--emai 중복체크 -->
		<select id="ajaxGetId" parameterType="String" resultType="String">
		   select * from userboard
		   where user_id=#{value}
		</select>
	
	
	<!--Nick name 중복체크 -->
		<select id="getNick" parameterType="String" resultType="String">
			select * from userboard
			where user_nick=#{value}
		</select>


	<insert id="insertMember" parameterType="com.bit.web.vo.JoinSeoulBean">
	    INSERT INTO 
	 		userboard(user_id,user_nick,user_pw,user_name,user_nation,user_tel,user_birth,user_gender,user_pp,user_first)
	 		values(#{user_id},#{user_nick},#{user_pw},#{user_name},#{user_nation},#{user_tel},#{user_birth},#{user_gender},#{user_pp},#{user_first})
	</insert>
	
	
	<select id="selectcontinent" parameterType="String" resultType="java.util.HashMap">
 		select country_no, country_name from nation 
         where continent = #{value} 
 	</select> 
	
	
	
	
